<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.ravivats.moonwalk">
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".GalleryActivity"
            android:label="Gallery"/>
        <activity android:name=".QuizActivity"
            android:label="Quiz"/>
        <activity android:name=".LocationActivity"
            android:label="Location" />
        <activity android:name=".AboutActivity"
            android:label="About Us"/>
        <activity android:name=".MenuActivity"
            android:label="Facts Section"/>
        <activity android:name=".LiveStreamActivity"
            android:label="NASA Live Stream"/>
        <activity android:name=".MoonActivity"
            android:label="About Planets"/>
        <activity android:name=".FactActivity"
            android:label="NASA: Fact of the day"/>
    </application>
</manifest>
